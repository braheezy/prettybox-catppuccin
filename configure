#!/bin/bash

VAGRANT_VERSION=2.2.19
VIRTUALBOX_VERSION=6.1.36

# Update stuffs
apt update -y

apt install -y wget unzip

# Install Vagrant
wget https://releases.hashicorp.com/vagrant/${VAGRANT_VERSION}/vagrant_${VAGRANT_VERSION}_x86_64.deb
apt install -y ./vagrant_${VAGRANT_VERSION}_x86_64.deb
vagrant -v || exit 1

# Install VirtualBox
wget https://download.virtualbox.org/virtualbox/$VIRTUALBOX_VERSION/virtualbox-6.1_$VIRTUALBOX_VERSION-152435~Ubuntu~focal_amd64.deb
apt install -y ./virtualbox-6.1_$VIRTUALBOX_VERSION-152435~Ubuntu~focal_amd64.deb
vboxmanage -v || exit 1
